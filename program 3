#HAPPY NUMBER OR NOT
def sumofnumber(n):
    s=0
    while(n>0):
        r=n%10
        s=s+(r*r)
        n=n//10
    return s
n=int(input('Enter a number:'))
while(n>9):
    n=sumofnumber(n)
if n==1 or n==7:
    print('Happy number')
else:
    print('Not a happy number')


